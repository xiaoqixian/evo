#pragma once

namespace evo::coro {

class RawTask;

class TaskScheme {
public:
  virtual void run() = 0;
};

class RawTask {
  TaskScheme* task_ {nullptr};

public:
  RawTask(TaskScheme* task) noexcept: task_(task) {}

  inline void run() {
    task_->run();
  }
};

} // namespace evo::coro
