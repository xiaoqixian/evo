#pragma once

namespace evo::coro {

class RawTask {
  void* data_ {nullptr};

  using Fp = void(*)(void*);
  Fp run_;

public:
  RawTask(void* data, Fp run) noexcept: data_(data), run_(run) {}

  inline void run() {
    (*run_)(data_);
  }
};

} // namespace evo::coro
