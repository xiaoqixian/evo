#pragma once

#include "evo/result"
#include <cstring>
namespace evo::coro {

template <typename T>
class UnixIOResult: public Result<T, int> {
public:
  inline T unwrap_or_throw() {
    if (this->is_err()) {
      throw std::runtime_error(std::strerror(this->unchecked_unwrap_err()));
    } else {
      return std::move(*this).unchecked_unwrap();
    }
  }
};

} // namespace evo::coro
