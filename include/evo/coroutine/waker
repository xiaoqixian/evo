#pragma once

#include "evo/coroutine/scheduler"
#include "evo/coroutine/raw_task"

namespace evo::coro {

class Waker {
  RawTask task_;
  LocalScheduler scheduler_;
public:
  explicit Waker(RawTask task) noexcept: task_(task) {}

  inline void wake() {
    scheduler_.schedule(task_);
  }
};

} // namespace evo::coro
