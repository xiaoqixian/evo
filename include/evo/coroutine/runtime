#pragma once

#include "evo/coroutine/driver"
#include "evo/coroutine/utilities"
#include "evo/coroutine/context"
#include <coroutine>

namespace evo::coro {

class Runtime;

struct EpollDriverTag {};

class Runtime {
  Context ctx_;
  std::unique_ptr<Driver> driver_;
public:
  Runtime(EpollDriverTag): driver_(std::make_unique<EpollDriver>()) {}

  void block_on(std::coroutine_handle<>);
};

} // namespace evo::coro
